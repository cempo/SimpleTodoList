<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance"/>

    <style name="TextAppearance.MenuHeader"/>

    <style name="TextAppearance.ListItem"/>

    <style name="TextAppearance.ListItem.TodayTasks"/>

    <style name="TextAppearance.TaskDetails"/>

    <style name="TextAppearance.Dialog.Button" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:colorAccent</item>
    </style>
    <!-- Menu header -->
    <style name="TextAppearance.MenuHeader.Day">
        <item name="android:textSize">@dimen/text_size_60sp</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MenuHeader.DayOfWeek">
        <item name="android:textSize">@dimen/text_size_28sp</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.MenuHeader.Month">
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:textColor">?attr/colorPrimaryLight</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.MenuHeader.Year">
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:textColor">?attr/colorPrimaryLight</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!-- Today task -->
    <style name="TextAppearance.ListItem.TodayTasks.Title">
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.ListItem.TodayTasks.Description">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.ListItem.TodayTasks.Date">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <!-- Task Details -->
    <style name="TextAppearance.TaskDetails.Title">
        <item name="android:textSize">@dimen/text_size_26sp</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>
    <style name="TextAppearance.TaskDetails.Description">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>
</resources>